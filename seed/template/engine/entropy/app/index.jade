{%= getRoutes('components', '.jade', true, `include $TPL$`) %}
doctype html
html(lang='es')
    head
        meta(charset='utf-8')
        title Entropy - Breakout Game
        meta(content='' name='description')
        link(href='favicon.ico' rel='shortcut icon')
        link(href='http://fonts.googleapis.com/css?family=Roboto:100' rel='stylesheet' type='text/css')
        link(href='http://fonts.googleapis.com/css?family=Press+Start+2P' rel='stylesheet' type='text/css')
        link(href='css/main.css' rel='stylesheet')

    body
        .screens
            .screen.loading-screen
                .progress-bar-outer
                    .progress-bar-inner

            .screen.menu-screen
                .breakout-logo
                .menu-click-to-start Click to start
                .menu-message-text During the game, use left/right arrows to skip levels.

            .screen.gameplay-screen
                canvas.game-canvas

            .screen.gameover-screen
                .gameover-text Game over

        footer breakout. powered by entropy. mrtambourine &copy; 2015

        +script-dist()
            // Only these four scripts are needed initially, rest will be preloaded later. -->
            script(src='js/start.js')

            script(src='assets/lib/preloadjs.min.js')
            script(src='assets/lib/entropy.min.js' defer)
            script(src='assets/lib/entropy-plugins.min.js' defer)
            script(src='js/states/Loading.js' defer)